%h1 Editing admin_event

= form_for @admin_event, url: "/admin_events/#{@admin_event.id}", method: 'put' do |f|
  - if @admin_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_event.errors.count, "error")} prohibited this admin_event from being saved:"
      %ul
        - @admin_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :location_url
    = f.text_field :location_url
  .field
    = f.label :time
    = f.text_field :time
  .field
    = f.label :ticket_url
    = f.text_field :ticket_url
  .field
    = f.label :details
    = f.text_field :details
  .actions
    = f.submit 'Save'



= link_to 'Back', admin_events_path
