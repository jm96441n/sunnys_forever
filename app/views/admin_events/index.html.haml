%h1 Listing admin_events

.row
  .col-md-2
    %h2
      Date
  .col-md-2
    %h2
      Location
  .col-md-2
    %h2
      Time
  .col-md-2
    %h2
      Details
  .col-md-2
  .col-md-2

.row
  .col-md-12
    - @admin_events.each do |admin_event|
      .row
        .col-md-2
          %h4
            = admin_event.date
        .col-md-2
          %h4
            = admin_event.location
        .col-md-2
          %h4
            = admin_event.time
        .col-md-2
          %h4
            = admin_event.details
        .col-md-2
          %h4
            = link_to 'Edit', edit_admin_event_path(admin_event)
        .col-md-2
          %h4
            = link_to 'Destroy', admin_event_path(admin_event), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
.row
  .col-md-4.col-md-offset-1
    %p
      = link_to 'New Admin event', new_admin_event_path
.row
  .col-md-4.col-md-offset-1
    %p
      = "Amount Raised: #{@money.dollar}"
    %p
      = link_to 'Edit Amount Raised', edit_admin_money_path(@money)
